.chatroom__main__box
  .chatroom__main__info.flex
    .chatroom__main__messanger
      = message.user.name
    .chatroom__main__info__dates
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .chatroom__main__message
    - if message.content.present?
      = message.content
    = image_tag message.image.url, class: 'chatroom__main__message__image' if message.image.present?

